[build-system]
requires = ["setuptools>=68", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "duckdice-betbot"
version = "4.9.2"
description = "DuckDice betting bot with 18 strategies, Monte Carlo simulation, and comprehensive CLI"
readme = "README.md"
authors = [{ name = "Dennis", email = "schnickfitzel1@gmail.com" }]
license = { file = "LICENSE" }
requires-python = ">=3.9"
dependencies = [
  "requests>=2.31.0",
  "PyYAML>=6.0.2",
  "rich>=13.7.0",
]

[project.optional-dependencies]
tui = ["textual>=0.47.0"]
gui = []  # Tkinter is stdlib
all = ["textual>=0.47.0"]
classifiers = [
  "Programming Language :: Python :: 3",
  "Programming Language :: Python :: 3.9",
  "Programming Language :: Python :: 3.10",
  "Programming Language :: Python :: 3.11",
  "Programming Language :: Python :: 3.12",
  "License :: OSI Approved :: MIT License",
  "Operating System :: OS Independent",
  "Environment :: Console",
  "Topic :: Utilities",
]
keywords = ["duckdice", "dice", "betting", "cli", "api", "tkinter", "strategy" ]

[project.urls]
Homepage = "https://github.com/sushiomsky/duckdice"
Repository = "https://github.com/sushiomsky/duckdice"

[project.optional-dependencies]
# GUI has no extra pip requirements (tkinter is part of stdlib on many platforms)
# This extra simply enables documenting/advertising the GUI entry point.
# Install: pip install .[gui]
gui = []

[project.scripts]
duckdice = "duckdice_cli:main"
duckdice-compare = "strategy_comparison:main"
duckdice-tui = "duckdice_tui:main"

[tool.setuptools]
py-modules = ["duckdice_cli", "strategy_comparison", "duckdice_tui", "duckdice"]

[tool.setuptools.packages.find]
where = ["src"]
include = [
  "duckdice_api*",
  "betbot_engine*",
  "betbot_strategies*",
  "cli_display*",
  "interfaces*",
]
